@model ITechArt.SurveysCreator.WebApp.ViewModels.ChangeUserInfoViewModel

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

@{
    ViewData["Title"] = "Edit User";
}

<div class="text-center">
    <form method="post" asp-controller="Admin" asp-action="Edit">
        <input type="hidden" asp-for="Id"/>
        <div class="pb-2 form-group">
            <label asp-for="Email"></label><br/>
            <input asp-for="Email"/><br/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="pb-2 form-group">
            <label asp-for="FirstName"></label><br/>
            <input asp-for="FirstName"/><br/>
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="pb-2 form-group">
            <label asp-for="SecondName"></label><br/>
            <input asp-for="SecondName"/><br/>
            <span asp-validation-for="SecondName"></span>
        </div>
        <div class="pb-2 form-group">
            <label asp-for="Password"></label><br/>
            <input asp-for="Password"/><br/>
            <span asp-validation-for="Password"></span>
        </div>
        <div class="pb-2 form-group">
            <label asp-for="Role"></label><br/>
            @foreach(var role in Model.AllRoles)
            {
                <input type="radio" asp-for="Role" value="@role"/>@role<br/>
            }
            <span asp-validation-for="Role"></span>
        </div>
        <input class="btn btn-outline-dark" type="submit" value="Save"/>
        <div asp-validation-summary="ModelOnly"></div>
    </form>
</div>
