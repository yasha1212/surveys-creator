@model IEnumerable<ITechArt.SurveysCreator.WebApp.ViewModels.ShowUserInfoViewModel>

@{
    ViewData["Title"] = "Users List";
}

<h2>Users</h2>

<div class="text-center">
    <table class="table">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(model => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.SecondName)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Role)
                </td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                </td>
            </tr>
        }
    </table>
</div>
